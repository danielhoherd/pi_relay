#!/usr/bin/python

'''Raspberry Pi relay test script 3.
Find more information on this script at
http://youtu.be/oaf_zQcrg7g
Original script: http://lpaste.net/104491'''

import RPi.GPIO as GPIO
import time
import argparse
from datetime import datetime

parser = argparse.ArgumentParser(description='Loops through relays and '
                                             'toggles them in a pattern')
parser.add_argument('--sleeptime', '-s', default='0.2', type=float,
                    help='Time to sleep between relay toggles')
parser.add_argument('--debug', '-d', action='store_true',
                    help='Enables debug output')
args = parser.parse_args()

GPIO.setmode(GPIO.BCM)

# init list with gpio numbers
gpioList = [2, 3, 4, 17, 27, 22, 10, 9]

# Define the length of the longest element for formatting purposes
gpioListMaxLen = max([(len(str(x))) for x in gpioList])

# list for state representation as string
gpioState = ['on', 'off']

# Clean start: loop through pins and set mode and state to 'low'
for g in gpioList:
    GPIO.setup(g, GPIO.OUT)
    GPIO.output(g, GPIO.HIGH)

def printDebug(debug):
    if args.debug:
        d = datetime.now()
        print d.strftime("%F %T " + debug)

def gpioSet(pin,state):
    printDebug("{} {}".format(str(pin).ljust(gpioListMaxLen),
                              gpioState[state]))
    GPIO.output(pin, state)
    time.sleep(args.sleeptime);

def gpioHigh(pin):
    gpioSet(pin, GPIO.HIGH)

def gpioLow(pin):
    gpioSet(pin, GPIO.LOW)

def main():
    try:
        while True:
            for i in gpioList:
                gpioLow(i)

            #gpioList.reverse()

            for i in gpioList:
                gpioHigh(i)

            gpioList.reverse()

    # End program cleanly with keyboard
    except KeyboardInterrupt:
        print "  Keyboard interrupt, quitting."

    finally:
        # Reset GPIO settings
        GPIO.cleanup()

if __name__ == '__main__':
    main()
